<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
        <h1>
            <%=@user.full_name%>
            <%=@user.email%>
        </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <%if @user.trips.any?%>
            <h3></a>Trips(<%=@user.trips.count%>)</h3>
            <ol class="trips">
                <%=render @trips%>
            </ol>
            <%=will_paginate @trips%>
        <%end%>
    </div>
</div>